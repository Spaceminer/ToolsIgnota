<Page
    x:Class="ToolsIgnota.Views.ControlInitiativePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:ToolsIgnota.Models"
    xmlns:views="using:ToolsIgnota.Views"
    mc:Ignorable="d">

    

    <Grid>
        <StackPanel x:Name="ContentArea">
            <TextBlock x:Uid="ControlInitiative_DisplayOptions" Style="{ThemeResource SubtitleTextBlockStyle}" />
            <StackPanel Margin="{StaticResource SmallTopBottomMargin}">
                <ToggleSwitch 
                    x:Uid="ControlInitiative_DisplayOptions_Visible" 
                    x:Name="InitiativeVisibleSwitch"
                    Margin="{StaticResource XSmallTopMargin}"
                    IsOn="{x:Bind ViewModel.InitiativeVisible, Mode=OneTime}"
                    Toggled="InitiativeVisibleSwitch_Toggled" />
            </StackPanel>
            <TextBlock x:Uid="ControlInitiative_CreatureImages" Style="{ThemeResource SubtitleTextBlockStyle}" />
            <StackPanel Margin="{StaticResource SmallTopBottomMargin}">
                <views:CreatureImageSettingsControl />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
